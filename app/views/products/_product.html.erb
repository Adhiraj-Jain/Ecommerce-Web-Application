<%= link_to savedlist_path(item.id), method: "put", class: "link" do %>
    <div class="card" style="width: 18rem;">
        <img src="<%= item.photoURL %>" class="card-img-top" alt="...">
        <div class="card-body" >
            <h2 class="card-title"><%= item.name %></h2>
            <h3 class="card-title"><%=  number_to_currency(item.price) %></h1>
        </div>
        <% if item.savedlists.find_by(id: @currentUserSavedlist.id) %>
            <i class="fa fa-check-circle"></i>
        <% end %>
    </div>
<% end %>