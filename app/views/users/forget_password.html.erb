<div class="loginPage px-4 pb-3 d-flex flex-column ">
    <div class="d-flex flex-row">
        <%= link_to root_path, {class: 'align-self-center'} do %>
         <i class="fa fa-times closebtn" aria-hidden="true"></i>
        <% end %>
        <h1 class="text-center py-2 m-3 flex-fill">FORGOT PASSWORD</h1>
    </div>
    <% flash.each do |name, msg| %>
        <div class='alert alert-<%= name %>'>
            <%= msg %>
        </div>
    <% end %>
    <div class="login mx-3 justify-content-center">
        <div class="col-6 col-md-12">
            <h3>Don't worry! We will rescue you..</h3>
        </div>
        <%= form_with model: @user, url: users_forget_password_update_path do |form| %>
            <div class='mb-3 '>
                <%= form.email_field :email, class: "form-control p-2", :placeholder => "ex: joe@joe.com", :required => true %>
            </div>
            <div class="d-grid gap-2">
                <%= form.submit "Submit", {class: "btn w-100 submitBtn"} %>
            </div>
        <% end %>
    </div>
</div>
