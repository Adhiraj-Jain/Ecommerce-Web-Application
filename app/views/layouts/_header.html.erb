<header class="pt-5 pb-5">
  <nav class="navbar navbar-light bg-light fixed-top">
    <div class="d-flex justify-content-center container-fluid ">
      <div class="navbar-brand mb-0 h1 header-heading"><%= link_to "Shopping App", root_path, class: "link" %></div>
    </div>
    
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <i class="icon fa fa-bars" aria-hidden="true"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% (Category.all).each do |category| %>
          <li class="nav-item">
            <%= link_to category.name, category_path(category.id), {class: "nav-link"}%>
          </li>
          <% end %>
          <li class="nav-item">
            <%= link_to "Saved Products", savedlist_path(@currentUserSavedlist.id), {class: "nav-link"}%>
          </li>
        </ul>
      </div>
      <div>
        <%= link_to cart_path(@current_user ? @current_user.id : 0) do %>
          <i class="fa fa-shopping-bag p-2" aria-hidden="true"></i>
        <% end %>
      </div>
    </div>
  </nav>
</header>